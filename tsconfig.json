{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*"]
}