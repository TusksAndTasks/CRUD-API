{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["mocha", "node"]
    },
    "include": ["src/**/*"],
    "exclude": [
      "./test/",
      "./node_modules/",
      "./dist/"
    ],
}